{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      // Core directories
      "@/*": ["./*"],
      "@/constants": ["./constants/index"],
      "@/constants/*": ["./constants/*"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@hooks/*": ["./hooks/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"],
      
      // Screen directories
      "@auth/*": ["./app/(screens)/(auth)/*"],
      "@customers/*": ["./app/(screens)/(customers)/*"],
      "@farmers/*": ["./app/(screens)/(farmers)/*"],
      "@delivery/*": ["./app/(screens)/(delivery)/*"],
      "@admin/*": ["./app/(screens)/(admin)/*"],
      "@load/*": ["./app/(screens)/(load)/*"],
      "@screens/*": ["./app/(screens)/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}